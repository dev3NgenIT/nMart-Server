{
  "compilerOptions": {
    "baseUrl": "./src",  
    "paths": {
      "@/*": ["./*"]
    }, 
    "rootDir": "./src", 
    "outDir": "./dist",  
    "target": "es2016",  
    "module": "CommonJS",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true, 
    "allowSyntheticDefaultImports": true, 
    "strictNullChecks": true, 
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
